            target-dir="src/com/urbanairship/cordova/events"/>
        <source-file
            src="src/android/events/Event.java"
            target-dir="src/com/urbanairship/cordova/events"/>

        <framework
            custom="true"
            src="src/android/build-extras.gradle"
            type="gradleReference"/>

    </platform>

    <!-- ios -->
